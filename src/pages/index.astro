---
import Layout from '../layouts/Layout.astro';
import { config } from '../config';
---

<Layout>
	<main class="scroll-smooth">
		<section id="hero" class="relative h-screen flex items-center justify-center scroll-snap-start scroll-mt-0">
			<picture class="absolute inset-0">
				<source srcset={config.hero.backgroundImage} type="image/jpeg" />
				<img src={config.hero.backgroundImage} alt="Custom home exterior" class="w-full h-full object-cover" />
			</picture>
			<div class="absolute inset-0 bg-black/40" />
			<div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
				<h1 class="text-5xl md:text-7xl font-bold text-white tracking-tight mb-4">
					{config.hero.headline}
				</h1>
				<p class="text-xl md:text-2xl text-gray-100 mb-8 font-light">
					{config.hero.subline}
				</p>
				<a href={`mailto:${config.hero.email}`} class="inline-block bg-amber-500 hover:bg-amber-600 text-white font-semibold px-8 py-4 rounded-lg transition-colors">
					Email Me
				</a>
			</div>
		</section>

		<section id="about" class="min-h-screen flex items-center justify-center py-20 px-4 bg-stone-50 scroll-snap-start">
			<div class="max-w-5xl mx-auto w-full">
				<div class="grid md:grid-cols-2 gap-12 items-center">
					<div class="order-2 md:order-1">
						<h2 class="text-4xl md:text-5xl font-bold text-stone-800 tracking-tight mb-6">
							{config.about.name}
						</h2>
						<p class="text-lg text-stone-600 leading-relaxed mb-8">
							{config.about.bio}
						</p>
						<div class="grid grid-cols-2 gap-6">
					{config.about.stats.map((stat) => (
						<div>
							<div class="text-3xl font-bold text-amber-600 mb-1">
								{stat.value}
							</div>
							<div class="text-sm text-stone-500 uppercase tracking-wide">
								{stat.label}
							</div>
						</div>
					))}
						</div>
					</div>
					<div class="order-1 md:order-2 flex justify-center">
						<div class="relative">
							<picture>
								<source srcset={config.about.photo} type="image/jpeg" />
								<img src={config.about.photo} alt={config.about.name} class="w-64 h-64 md:w-80 md:h-80 object-cover rounded-full shadow-2xl" />
							</picture>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="gallery" class="min-h-screen py-20 px-4 bg-white scroll-snap-start">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-4xl md:text-5xl font-bold text-stone-800 tracking-tight mb-12 text-center">
					Recent Work
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					{config.gallery.map((image, index) => (
						<div class={`relative overflow-hidden rounded-lg shadow-lg ${index === 1 ? 'md:mt-8' : ''} ${index === 4 ? 'md:-mt-8' : ''}`}>
							<picture>
								<source srcset={image.src} type="image/jpeg" />
								<img src={image.src} alt={image.alt} loading="lazy" class="w-full h-80 object-cover transition-transform duration-300 hover:scale-105" />
							</picture>
						</div>
					))}
				</div>
			</div>
		</section>

		<section id="testimonials" class="min-h-screen flex items-center justify-center py-20 px-4 bg-stone-50 scroll-snap-start">
			<div class="max-w-4xl mx-auto">
				<h2 class="text-4xl md:text-5xl font-bold text-stone-800 tracking-tight mb-12 text-center">
					What Clients Say
				</h2>
				<div class="grid gap-8">
					{config.testimonials.map((testimonial, index) => (
						<div class="bg-white rounded-lg shadow-md p-8">
							<p class="text-lg text-stone-700 leading-relaxed mb-4">
								"{testimonial.quote}"
							</p>
							<div class="flex items-center gap-2">
								<div class="font-semibold text-stone-800">
									{testimonial.name}
								</div>
								<span class="text-stone-400">â€¢</span>
								<div class="text-stone-500">
									{testimonial.neighborhood}
								</div>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<section id="contact" class="min-h-screen flex items-center justify-center py-20 px-4 bg-white scroll-snap-start">
			<div class="max-w-3xl mx-auto text-center">
				<h2 class="text-4xl md:text-5xl font-bold text-stone-800 tracking-tight mb-6">
					{config.contact.headline}
				</h2>
				<p class="text-lg text-stone-600 mb-8 leading-relaxed">
					{config.contact.description}
				</p>
				<a href={`mailto:${config.hero.email}`} class="inline-block bg-amber-500 hover:bg-amber-600 text-white font-semibold px-8 py-4 rounded-lg transition-colors text-lg">
					{config.hero.email}
				</a>
			</div>
		</section>
	</main>
</Layout>
