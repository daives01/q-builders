---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const {
	title = 'Q Builders | Custom homes in Denver',
	description = 'Custom home builder in Denver, Colorado. 38 homes built across 12 neighborhoods since 2014. Expert craftsmanship, transparent communication, and hands-on project management.',
	image = '/hero-image.jpeg'
} = Astro.props;

const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).href : undefined;

const siteUrl = Astro.site?.href || 'https://qbuilderscolorado.com';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#1c1917" />
		<link rel="icon" href="/favicon.ico" />
		{canonical && <link rel="canonical" href={canonical} />}
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content="Colorado custom home builders, Denver house builder, custom home builder Denver, Denver custom home construction, Colorado residential construction, new home builder Denver, custom homes Colorado, Denver luxury home builder, home renovation Denver, Colorado house construction, Denver front range builder, custom home builder Cherry Creek, Washington Park home builder, LoDo custom home builder, Highland Denver home builder, Capitol Hill renovation, Golden custom home builder" />
		<meta name="author" content="Q Builders" />
		<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
		<meta name="geo.region" content="US-CO" />
		<meta name="geo.placename" content="Denver, Colorado" />
		<meta name="ICBM" content="39.7392, -104.9903" />
		
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Q Builders" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />
		{canonical && <meta property="og:url" content={canonical} />}
		<meta property="og:locale" content="en_US" />
		<meta property="og:image:alt" content={title} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={image} />
		{canonical && <meta name="twitter:url" content={canonical} />}

		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "HomeAndConstructionBusiness",
			"name": "Q Builders",
			"description": "Custom home builder in Denver, Colorado. Specializing in custom residential construction, new construction, and home renovations across Denver's front range.",
			"url": siteUrl,
			"image": `${siteUrl}${image}`,
			"email": "qbuilders123@gmail.com",
			"areaServed": {
				"@type": "GeoCircle",
				"geoMidpoint": {
					"@type": "GeoCoordinates",
					"latitude": 39.7392,
					"longitude": -104.9903
				},
				"geoRadius": "50 mi"
			},
			"address": {
				"@type": "PostalAddress",
				"addressRegion": "CO",
				"addressCountry": "US"
			},
			"founder": {
				"@type": "Person",
				"name": "Tommy Cagle",
				"jobTitle": "Owner & Founder"
			},
			"foundingDate": "2014",
			"serviceType": [
				"Custom Home Building",
				"New Home Construction",
				"Home Renovation",
				"Residential Construction",
				"House Construction",
				"Luxury Home Building"
			],
			"offers": [
				{
					"@type": "Offer",
					"name": "Custom Home Building",
					"description": "Full-service custom home construction from design to completion",
					"areaServed": ["Denver", "Cherry Creek", "Washington Park", "LoDo", "Highland", "Capitol Hill", "Golden", "Boulder", "Aurora", "Englewood", "Lakewood", "Littleton"]
				},
				{
					"@type": "Offer",
					"name": "Home Renovation",
					"description": "Complete home renovations and remodeling services",
					"areaServed": ["Denver", "Cherry Creek", "Washington Park", "LoDo", "Highland", "Capitol Hill", "Golden", "Boulder", "Aurora", "Englewood", "Lakewood", "Littleton"]
				}
			],
			"knowsAbout": [
				"custom home builders Colorado",
				"Denver custom home builder",
				"Colorado house builder",
				"Denver residential construction",
				"custom homes Denver",
				"luxury home builder Denver",
				"new construction Denver",
				"home renovation Denver",
				"Colorado custom home construction",
				"Denver front range home builder"
			],
			"hasCredential": "Licensed General Contractor",
			"priceRange": "$$$"
		})} />
	</head>
	<body class="antialiased">
		<slot />
	</body>
</html>
