---
import Layout from '../layouts/Layout.astro';
import { config } from '../config';
import Lightbox from '../components/Lightbox.astro';
---

<Layout title="Gallery | Q Builders">
	<nav class="fixed top-0 left-0 right-0 z-50 bg-stone-900/95 backdrop-blur-[var(--backdrop-blur)]" aria-label="Main navigation">
		<div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
			<a href="/" class="text-xl font-semibold tracking-tight text-white hover:text-white/80 transition-colors">Q Builders</a>
			<a href="/" class="text-white/90 hover:text-white text-sm tracking-wide transition-colors">
				‚Üê Back to home
			</a>
		</div>
	</nav>

	<main class="pt-24 pb-16 bg-stone-50">
		<div class="max-w-7xl mx-auto px-6">
			<div class="text-center mb-16">
				<p class="text-amber-600 tracking-[0.2em] uppercase text-sm font-semibold mb-4">
					Gallery
				</p>
				<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-stone-900 tracking-tight">
					My work
				</h1>
			</div>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{config.gallery.map((image, index) => (
					<figure class:list={[`group relative overflow-hidden bg-white cursor-pointer`, index === 0 ? 'md:col-span-2 lg:col-span-2 lg:row-span-2' : '']} data-lightbox-index={index}>
						<picture>
							<source srcset={image.src} type="image/jpeg" />
							<img src={image.src} alt={image.alt} loading="lazy" class:list={['w-full object-cover transition-transform duration-[var(--transition-slow)]', index === 0 ? 'h-full min-h-[400px] md:min-h-[500px]' : 'h-72']} />
						</picture>
					</figure>
				))}
			</div>
		</div>

		<Lightbox images={config.gallery} />
	</main>
</Layout>
